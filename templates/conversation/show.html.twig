{% extends 'base.html.twig' %}

{% block title %}Conversation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">Messages</div>
                    <div class="card-body">
                        <div class="overflow-y-auto"
                             id="messages"
                             style="max-height: 500px;"
                        >
                            {% include 'message/content.html.twig' %}
                        </div>

                        <hr>

                        <form action="" class="d-flex gap-3 mt-3" hx-post="{{ path('message.create') }}" hx-swap="none">
                            <input aria-label="Message"
                                   class="form-control"
                                   name="content"
                                   placeholder="Tapez votre message..."
                                   id="content"
                                   type="text"
                            >
                            <input type="hidden" name="conversationId" id="conversationId" value="{{ conversation.id }}">
                            <button class="btn btn-primary">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
